{
    "name": "Playing Dead",
    "description": "While activated and staying still, hostile mobs become passive and players within 10 blocks will recieve nausea due to your bad smell.",
    "type": "origins:multiple",
    "toggle": 
        {
            "type": "origins:toggle",
            "key": 
                {
                    "key": "key.origins.primary_active",
                    "continuous": false
                }
        },
    "nausea":
        {
            "type": "origins:action_over_time",
            "interval": 1,
            "entity_action":
                {
                    "type": "origins:area_of_effect",
                    "radius": 10,
                    "bientity_action":
                        {
                            "type": "origins:target_action",
                            "action":
                                {
                                    "type": "origins:and",
                                    "actions":
                                        [
                                            {
                                                "type": "origins:apply_effect",
                                                "effect":
                                                    {
                                                        "effect": "minecraft:nausea",
                                                        "duration": 80,
                                                        "amplifier": 0
                                                    }
                                            },
                                            {
                                                "type": "origins:execute_command",
                                                "command": "team join opossum_friendly"
                                            }
                                        ]
                                }
                        }
                },
            "condition": 
                {
                    "type": "origins:and",
                    "conditions":
                        [
                            {
                                "type": "origins:power_active",
                                "power": "*:*_toggle"
                            },
                            {
                                "type": "origins:moving",
                                "inverted": true
                            }
                        ]
                }
        },
    "create":
        {
            "type": "origins:action_on_callback",
            "entity_action_gained":
                {
                    "type": "origins:and",
                    "actions":
                        [
                            {
                                "type": "origins:execute_command",
                                "command": "team add opossum_friendly"
                            },
                            {
                                "type": "origins:execute_command",
                                "command": "team join opossum_friendly"
                            }
                        ]
                },
            "entity_action_lost": 
                    {
                        "type": "origins:execute_command",
                        "command": "team leave @s"
                    }
        },
    "remove":
        {
            "type": "origins:action_over_time",
            "interval": 1,
            "entity_action":
                {
                    "type": "origins:area_of_effect",
                    "radius": 10,
                    "bientity_action":
                        {
                            "type": "origins:target_action",
                            "action":
                                {
                                    "type": "origins:execute_command",
                                    "command": "team leave @s"
                                }
                        }
                },
            "condition": 
                {
                    "type": "origins:moving"
                }
        }
}